<div class = "row">
	<div class = "col-md-8 col-md-offset-2">
		<div class = "slideShow">
			<% @posts.each do |post| %>
				<img class = "mySlides" src="<%= post.image %>" style="width:100%;height:400px;"/>
			<% end %>
			  	<div class="slideControl" style="text-align:center;padding-top:10px;">
  					<button style="margin-right:15px;" onclick="plusDivs(-1)">&#10094; Prev</button>
  					<button style="margin-left:15px;" onclick="plusDivs(1)">Next &#10095;</button>
  				</div>
		</div>
	</div>
</div>
<script>
 var slideIndex = 1;
		showDivs(slideIndex);

		function plusDivs(n) {
  		showDivs(slideIndex += n);
		}

		function showDivs(n) {
  		var i;
  		var x = document.getElementsByClassName("mySlides");
  		if (n > x.length) {slideIndex = 1}
  		if (n < 1) {slideIndex = x.length}
  		for (i = 0; i < x.length; i++) {
     		x[i].style.display = "none";
  		}
  		x[slideIndex-1].style.display = "block";
		}
</script>

