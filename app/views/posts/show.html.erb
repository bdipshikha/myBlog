</br></br>	
  <div class = "row">
    <div class = "col-md-10 col-md-offset-1">
      <div class = "row">
        <div class = "col-md-8">
          <img width="100%" height="400px;" src="<%= @post.image %>" /></br></br>
	        <h4><%= @post.title %></h4>
	        by  <b><%= @user_name.upcase %></b> created at <%= @post.created_at %>
          </b></br></br>
          <p class = "three-col"><%= @post.content %></p></br></br>
        </div>
        <div class = "col-md-4" style="padding-left:30px;"> 
          <div class = "row">
            <div class = "col-md-12">
              <h5>SEARCH</h5></br>
                <%= form_tag :controller => 'posts', :action => 'search', :method => 'get'  do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Search for .....", :id => 'search_field' %>
                  <%= submit_tag "Search", :name => nil, class: "button" %> 
                <% end %> 
            </div>
          </div>
          <hr>
          <div class = "row">
            <div class = "col-md-12">
              <h5>ARCHIVES</h5></br>
                <% @posts_month.each do |month, posts| %>
                  <a href='/archive/<%= month %>'><%= month %></a></br>
                <% end %>
            </div>
          </div>
          <hr>
    </div>






