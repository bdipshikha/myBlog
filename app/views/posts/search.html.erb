<style>
		body {
		margin-top: 70px;
		padding:8px;
    font-family: Crimson Text;
    font-size: 17px;
	}
	#search_field {
		width:70%;
		font-size: 18px;
		margin-right: 10px;
		padding-right: 10px;
		padding-left: 5px;
	}
	.three-col {
       -moz-column-count: 3;
       -moz-column-gap: 10px;
       -webkit-column-count: 3;
       -webkit-column-gap: 20px;
	}
	.button {
	}
	img {
		width: 100%;
		height: 300px;
	}
		hr {
		border-color: #b3b3b3;
	}

	</style>




		<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Dipshikha's Blog</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
          	<li><%= link_to 'Home', '/categories' %></li>
          	<% if current_user %>
							<li><a method="GET" href="/logout">Logout</a></li>
						<% end %>
						<li><%= link_to 'Login', '/sessions/new' %></li>
						<li><%= link_to 'Sign Up', '/users/new' %></li>
          </ul>
        </div>
      </div>
   	</div>
   	<div class = "row">
   		<div class = "col-md-10 col-md-offset-1">
   			<div class = "row">
   				<div class = "col-md-8"> 
      			<% if @results.count == 0 %>
        			<h3>Your search for "<%= @query %>" returned no result</h3>
      			<% else %>
        			<h3>Search result for the word "<%= @query %>" </h3>
        				<% @results.each do |post| %>
        					<h3><%= link_to (post.title), '/categories/' + post.category_id.to_s + '/posts/' + post.id.to_s %></h3></br>
        					<%= link_to image_tag(post.image), '/categories/' + post.category_id.to_s + '/posts/' + post.id.to_s %></br></br>
        					<%= post.content[0..300] %> .....
        					<hr>
        				<% end %>
     			 <% end %>

     			</div>
					<div class = "col-md-4" style="padding-left:30px;">
						<div class = "row">
							<div class = "col-md-12">
								<h4>SEARCH</h4></br>
								<%= form_tag :controller => 'posts', :action => 'search', :method => 'get'  do %>
      						<%= text_field_tag :search, params[:search], placeholder: "Search for .....", :id => 'search_field' %>
      						<%= submit_tag "Search", :name => nil, class: "button" %> 
  							<% end %>
  					</div>
  				</div>
  				<hr>	
     			</div>
     			</div>
     			</div>







