<head>
		<link href='https://fonts.googleapis.com/css?family=Droid+Serif|Lobster|Yanone+Kaffeesatz|Crimson+Text' rel='stylesheet' type='text/css'>
</head>

<style>
	input[type="text"] {
		width: 100%;
		font-size: 20px;
		border-radius: 5px;

	}
	textarea {
		width: 100%;
		height: 200px;
		font-size: 20px;
		border-radius: 5px;
	}

	body {
		margin-top: 70px;
		padding: 8px;
		font-family: Crimson Text;
		font-size: 17px;
	}
	.btn-secondary {
		width: 100%;
		font-size: 20px;
		background-color: #3fb2bb;
		color: white;
	}
</style>

	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Dipshikha's Blog</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
          	<li><%= link_to 'Home', '/categories' %></li>
          </ul>
        </div>
      </div>
   	</div>




<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for @category, url: {action: 'update'} do |f| %>
			<%= f.label :Title %></br>
			<%= f.text_field :title,  value: @category.title %>
			</br></br>

			<%= f.label :Content %></br>
			<%= f.text_area :content, value: @category.content %>
			</br></br>

			<%= f.label :Image %></br>
			<%= f.text_field :image, value: @category.image %>
			</br></br>


			<%= f.submit 'Update Category!', :class => "btn btn-secondary"%>
		<% end %>
	</div>
</div>
