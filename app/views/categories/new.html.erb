				<%= f.text_field :title, placeholder: "Title" %>
				</br></br>

				<%= f.label :Content %></br>
				<%= f.text_area :content, placeholder: "Content" %>
				</br></br>

				<%= f.label :Image %></br>
				<%= f.text_field :image, placeholder: "Image" %>
				</br></br>

				<%= f.hidden_field :created_by, value: session[:user_id] %>



